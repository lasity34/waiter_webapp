<div>
  <div class="logout_container">
    <form action="/" method="get"></form>
    <button class="logout-button">Logout</button>
  </div>

  <div class="schedule-container">
    <h2>ðŸ“… Waiters Schedule ðŸ“…</h2>
    <div>

      <table class="schedule">
        <thead>
          <tr>
            <th>Shift</th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Lunch</td>
            {{#each schedule.lunch}}
              <td><div class="shift-cell">{{this}}</div></td>
            {{/each}}
          </tr>
          <tr>
            <td>Supper</td>
            {{#each schedule.supper}}
              <td><div class="shift-cell">{{this}}</div></td>
            {{/each}}
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="admin-container">
    <form action="/admin/create-user" method="get">
      <button type="submit" class="admin-button">Create User</button>
    </form>
    <form action="/admin/list-users" method="get">
      <button type="submit" class="admin-button">List Users</button>
    </form>
  </div>
</div>

<script>
  setTimeout(function() { var messageDiv =
  document.getElementById('notification-message'); if (messageDiv) {
  messageDiv.style.display = 'none'; } }, 3000); // 3 seconds
</script>