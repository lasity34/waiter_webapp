<div>
   <div class="logout_container">
    <form action="/" method="get">
    
    <button class="logout-button">Logout</button>
    </form>
  </div>


<div class="schedule-container">
  <h1>Select Your Shifts {{username}}</h1>
  <form action="/waiters/{{username}}" method="post">
    <table class="schedule">
      <thead>
        <tr>
          <th>Time Slot</th>
          {{#each daysOfWeek}}
            <th>{{this}}</th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
       {{#each timeSlots}}
  <tr>
    <td>{{this}}</td>
    {{#each ../daysOfWeek}}
    <td>
      <input type="checkbox" 
             id="days-{{this}}-{{../this}}" 
             name="days[{{this}}][{{../this}}]" 
             {{isDayChecked this ../this checkedDays}}>
      <label class="custom-checkbox" for="days-{{this}}-{{../this}}"></label>
    </td>
    {{/each}}
  </tr>
{{/each}}

      </tbody>
    </table>
    <button class="login-button" type="submit">Save</button>
  </form>
</div>
</div>
 <div id="notification-message" class="notification-message" style="display: {{#if notification}}block{{else}}none{{/if}};">
  {{notification}}
</div>

<script>
  setTimeout(function() { var messageDiv =
  document.getElementById('notification-message'); if (messageDiv) {
  messageDiv.style.display = 'none'; } }, 3000); // 3 seconds
</script>