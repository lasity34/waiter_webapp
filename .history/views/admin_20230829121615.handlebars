<div>
  <div class="logout_container">
    <form action="/" method="get">
      <button class="logout-button">Logout</button>
    </form>
  </div>

 <div class="schedule-container">
  <h2>ðŸ“… Waiters Schedule ðŸ“…</h2>
  <div>
    <table class="schedule">
      <thead>
        <tr>
          <th>Shift</th>
          <th>Monday</th>
          <th>Tuesday</th>
          <th>Wednesday</th>
          <th>Thursday</th>
          <th>Friday</th>
          <th>Saturday</th>
          <th>Sunday</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Lunch</td>
          {{#each schedule.lunch}}
            <td>
              <div class="shift-cell waiter-row">
                {{#each this}}
                  <span class="waiter-name">
                    {{this}}
                    <form class="remove-waiter-form" method="post" action="/admin/remove-waiter">
                      <input type="hidden" name="day" value="Monday">
                      <input type="hidden" name="shift" value="lunch">
                      <input type="hidden" name="waiter" value="{{this}}">
                      <button type="submit" class="remove-waiter">Remove</button>
                    </form>
                  </span>
                  <br>
                {{/each}}
              </div>
            </td>
          {{/each}}
        </tr>
        <tr>
          <td>Supper</td>
          {{#each schedule.supper}}
            <td>
              <div class="shift-cell waiter-row">
                {{#each this}}
                  <span class="waiter-name">
                    {{this}}
                    <form class="remove-waiter-form" method="post" action="/admin/remove-waiter">
                      <input type="hidden" name="day" value="Monday">
                      <input type="hidden" name="shift" value="supper">
                      <input type="hidden" name="waiter" value="{{this}}">
                      <button type="submit" class="remove-waiter">Remove</button>
                    </form>
                  </span>
                  <br>
                {{/each}}
              </div>
            </td>
          {{/each}}
        </tr>
      </tbody>
    </table>
  </div>
</div>


  <div class="admin-container">
    <form action="/admin/create-user" method="get">
      <button type="submit" class="admin-button create_button">Create User</button>
    </form>
    <form action="/admin/list-users" method="get">
      <button type="submit" class="admin-button">List Users</button>
    </form>
    <form action="/admin/reset-schedule" method="post">
        <button type="submit" class="admin-button reset-schedule">Reset Schedule</button>
    </form>
  </div>
</div>

