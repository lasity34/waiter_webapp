<div class="admin-container">
 <div class="create-user-column">
   {{#if message}}
    <div class="error-message">{{message}}</div>
  {{/if}}
    <h2>Create waiter</h2>
    <form class="create-user-form" action="/admin/create-waiter" method="post">
      <div class="input-container">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div class="input-container">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit" class="login-button">Create Waiter</button>
    </form>
  </div>

  <div class="users-list-column">
    <h2>List of Waiters</h2>
    <table class="users-list">
  <tr>
    <th>Waiter Name</th>
    <th>Action</th> 
  </tr>
  {{#each waiters}}
  <tr>
    <td>{{this.username}}</td>
    <td>
      <form action="/admin/delete-waiter" method="post"> 
        <input type="hidden" name="username" value="{{this.username}}"> 
        <button type="submit" class="delete-button">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>

  </div>
</div>


