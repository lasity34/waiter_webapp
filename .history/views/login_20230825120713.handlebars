<div>
  <h1>Waiters Schedule</h1>

  <div class="login-container">
   <form action="/login" method="post">

      <div class="input-container">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" placeholder="Enter your username" required />
      </div>
      <div class="input-container">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Enter your password" required />
      </div>
      <button type="submit" class="login-button">Login</button>
    </form>
  </div>
</div>
 <div id="notification-message" class="notification-message" style="display: {{#if notification}}block{{else}}none{{/if}};">
  {{notification}}
</div>

<script>
  setTimeout(function() { var messageDiv =
  document.getElementById('notification-message'); if (messageDiv) {
  messageDiv.style.display = 'none'; } }, 3000); // 3 seconds
</script>
